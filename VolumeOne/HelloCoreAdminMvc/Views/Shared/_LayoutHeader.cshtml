@using HelloCoreAdminMvc.Resources
@using Microsoft.Extensions.Hosting
<div class="container bg-light border border-dark rounded p-2 fixed-top">
    <header>
        <div class="bg-light mb-2">
            <div class="row">
                <div class="col-md-3 text-left">
                    <img class="image-fluid" src="@Url.Content("~/img/logo_asuendermann_transparent.png")" alt="Logo" width="150">
                </div>
                <div class="col-md-6 text-center">
                    <div class="lead font-weight-bold">@AdminResources.Browser_Title</div>
                    @if (null != User.Identity) {
                        <div>
                            @AdminResources.UserIdentity: @User.Identity.Name
                        </div>
                    }
                </div>
                <div class="col-md-3 text-right">
                    <environment include="Development">
                        <span class="text-success font-weight-bold">@Environments.Development </span>
                    </environment>
                    <environment include="Staging">
                        <span class="text-warning font-weight-bold">@Environments.Staging </span>
                    </environment>
                    <environment include="Production">
                        <span class="text-danger font-weight-bold">@Environments.Production </span>
                    </environment>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light border rounded ">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <span class="fa fa-home"></span> @HomeResources.Menu_Home
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>
</div>
